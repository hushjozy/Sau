{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "types": [
      "nativewind/types"
    ],
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@locales/*": [
        "./locales/*"
      ],
      "@provider/*": [
        "./provider/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@components/ui/*": [
        "./components/ui/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/auth/otp.tsx",
    "nativewind-env.d.ts"
  ]
}